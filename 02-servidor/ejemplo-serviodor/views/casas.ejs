<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Listado de Casas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container my-4">
    <h1>Listado de Casas</h1>
    <table class="table table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Valor</th>
                <th>Imagen</th>
                <th>Due√±o</th>
            </tr>
        </thead>
        <tbody>
            <% if (casas && casas.length) { %>
                <% casas.forEach(c=> { %>
                    <tr>
                        <td>
                            <%= c.id %>
                        </td>
                        <td>
                            <%= c.nombre %>
                        </td>
                        <td>$<%= c.valor.toLocaleString('es-EC') %>
                        </td>
                        <td>
                            <% if (c.imagenURL) { %>
                                <img src="<%= c.imagenURL %>" alt="<%= c.nombre %>" style="max-width:100px;">
                                <% } else { %>
                                    <span class="text-muted">Sin imagen</span>
                                    <% } %>
                        </td>
                        <td>
                            <%= c.username %>
                        </td>
                    </tr>
                    <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">No hay casas registradas.</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>
    <a href="/auth/logout" class="btn btn-secondary">Logout</a>
</body>

</html>